<h1>Create an article</h1>

<%= form_for @article do |j| %>
    <p>
        <%= j.label :title %>
            </br>
            <%= j.text_field :title %>
    </p>
    <p>
        <%= j.label :description %>
            </br>
            <%= j.text_area :description %>
    </p>
    <p>
        <%= j.submit %>
    </p>
    <% end %>